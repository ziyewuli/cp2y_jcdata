@import "../../common/css/mixin.styl"
.mod-slide
  position: relative;
  width: 100%;
  height: 1.1rem
  .index_img
   width:100%
.mod-index-tab
  width: 100%;
  display: table;
  background:#ffffff;
  a
    display: table-cell;
    position: relative;
    text-align: center;
    width: 33.33%;
    div
      padding: .5rem 0 .1rem;
  a:after
    display: block;
    content: '';
    position: absolute;
    width: .01rem;
    height: .6rem;
    background-color: #ECECEC;
    top: .2rem;
    right: 0;
  a:last-child:after
    display: none
  dl
    dt
      float: left;
      padding-left: .15rem;
      color: #999;
      h3
        font-size: .14rem;
        color: #333;
.nav-oneYuan
  background: url(https://clb.yztz.cn/app/images/icon-oneYuan.png) top .15rem center no-repeat;
.nav-simulate
  background: url(https://clb.yztz.cn/app/images/icon-simulate.png) top .15rem center no-repeat;
.nav-package
  background: url(https://clb.yztz.cn/app/images/icon-package.png) top .15rem center no-repeat;
.nav-oneYuan,.nav-package,.nav-simulate
  background-size: 30px 30px;

.mod-index-list
  .wrap
    margin-top: .1rem;
    padding-left: .2rem;
    background: #FFF;
    .title
      padding: .1rem 0 0;
      span
        display: inline-block;
        padding: 0 .05rem;
        line-height: .14rem;
        border-left: 2px solid #5B78C0;
        font-size: .12rem;
        color: #666;
  .mod-menu
    a
      display: block;
      position: relative;
      line-height: 1.3;
      border-bottom: 1px solid #ECECEC;
      padding: .1rem 0;
      overflow: hidden;
    a:last-child
      border-bottom: none;
    .title-icon
      float: left;
      width: 36px;
      height: 36px;
      margin-right: .12rem;
      img
        width: 100%;
  .tit
    float: left;
    .desc
      font-size: .12rem;
      color: #999;
  .fr
    float: right;
    text-align: right;
    margin-right: .3rem;
  .STOCK
    .iconfont
      color: #9C66C8;
      border-color: #9C66C8;
  .HSI
    .iconfont
      color: #996955;
      border-color: #996955;
  .GC
    .iconfont
      color: #F3AB1B;
      border-color: #F3AB1B;
  .CL
    .iconfont
      color: #CD3D3F;
      border-color: #CD3D3F;


.mod-app-download
  height: .5rem;
  >a
    display: block;
    position: fixed;
    bottom: .5rem;
    height: .5rem;
    width: 100%;
    background: rgba(0,0,0,.8);
    z-index: 100;
    .fl
      margin-left: .15rem;
      padding-top: .04rem;
      >img
        width: .42rem;
        height: .42rem;
    .desc
      color: #FFF;
      font-size: .12rem;
      padding-top: .07rem;
    .fr
      margin-right: .15rem;
      .btn
        line-height: .4rem;
        width: .8rem;
        margin-top: .05rem;


.menu
  .menu-list
    position fixed
    top 0
    bottom 0
    flex 0 0 250px
    left -250px
    width 250px
    background-color #22262a
    color #313131
    transition all .3s ease
    z-index 99
    .menu-header
      width 100%
      height 180px
      background-color #262d30
      .menu-avatar
        width 40%
        height auto
        border-radius 50%
        margin 20px 70px
      .menu-title
        font-size 14px
        color #ffffff
        line-height 28px
        font-weight 500
        text-align center
    &.show
      transform translateX(250px)
    .menu-ul
      margin 0
      overflow hidden
      padding 0
      .item
        display block
        font-size 14px
        padding 10px 13px
        text-align left
        text-indent 1px
        line-height 15px
        color #a6adb3
        font-weight 700
        border-1px(#40474a);
        &last-child
          margin-bottom 50px
        &before
          color #2c3e50
        .line
          border-top 1px solid #d4d4d4
        .menu-icon
          display inline-block
          width 30px
          height 30px
          background-color #383c40
          border-radius 50%
          vertical-align top
          text-align center
          .iconfont
            color #999999
            line-height 30px
            font-weight 700
        &.active
          color #01aef3
          .menu-icon
            background-color #01aef3
            .iconfont
              color #ffffff
        .menu-text
          display inline-block
          font-size 15px
          line-height 32px
          vertical-align top
          margin-left 10px
          font-weight 700
        .menu-new
          display inline-block
          width 30px
          height 30px
          background-color #d81229
          border-radius 50%
          vertical-align top
          text-align center
          float right
          span
            color #ffffff
            font-size 15px
            line-height 30px
            font-weight 500
